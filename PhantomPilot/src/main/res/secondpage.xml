<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#76a5af">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:layout_above="@+id/buttonUrgence">



        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="fill_parent"
            android:layout_column="2"
            android:paddingLeft="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/altPlus"
                android:src="@drawable/altplus"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Altitude"
                android:id="@+id/textView"
                android:textColor="#ffffff"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/altMoins"
                android:src="@drawable/altmoins"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:gravity="center_vertical"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rotGauche"
                android:src="@drawable/rotgauche"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rotation"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rotDroite"
                android:src="@drawable/rotdroite"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <RelativeLayout
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center_vertical"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dirGauche"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/versgauche"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dirDroite"
                android:src="@drawable/versdroite"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dirGauche" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dirHaut"
                android:src="@drawable/vershaut"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@+id/dirGauche"
                android:paddingBottom="40dp"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dirBas"
                android:src="@drawable/versbas"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/dirGauche"
                android:paddingTop="40dp"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Atterrissage d'urgence  "
        android:id="@+id/buttonUrgence"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/arrurgence"
        android:textColor="#ffffff" />

</RelativeLayout>